# GreenPath AI Environment Variables
# Copy this file to .env and fill in your actual API keys

# News API for climate news updates
NEWS_API_KEY=your_news_api_key_here

# OpenRouteService API for travel routing and distance calculations
ORS_API_KEY=your_ors_api_key_here

# Groq API for AI chatbot and image analysis
GROQ_API_KEY=your_groq_api_key_here

# Optional: OpenStreetMap API (currently not used but checked)
OPENSTREETMAP_API_KEY=your_openstreetmap_api_key_here

# Optional: OpenAI API (currently not used but checked)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Secret salt for security (currently not used but checked)
SECRET_SALT=your_secret_salt_here 